#include <stdio.h>

#define SIZE 5  // Define the size of the array

int main() {
    int numbers[SIZE];  // Declare an array of integers
    int sum = 0;        // Variable to store the sum
    float average;      // Variable to store the average

    // Input elements into the array
    printf("Enter %d integers:\n", SIZE);
    for (int i = 0; i < SIZE; i++) {
        printf("Element %d: ", i + 1);
        scanf("%d", &numbers[i]);
    }

    // Calculate the sum of the elements
    for (int i = 0; i < SIZE; i++) {
        sum += numbers[i];
    }

    // Calculate the average
    average = (float)sum / SIZE;

    // Output the results
    printf("\nSum of the array elements: %d\n", sum);
    printf("Average of the array elements: %.2f\n", average);

    return 0;
}
Enter 5 integers:
Element 1: 7
Element 2: 7
Element 3: 89
Element 4: 9
Element 5: 67

/* 
OUTPUT 
