#include <stdio.h>

int main() 
{
    int num_1, num_2, C;
    
    printf("Enter first number = " , num_1);
    scanf("%d" , &num_1);
    
    printf("Enter second number = " , num_2);
    scanf("%d" , &num_2);
    
    C = ( num_1 < num_2 ) ? num_1:num_2;  // Conditional Operator
    
        printf("The smallest of two numbers is = %d " , C );
    
    return 0;
}
    
/*
OUTPUT

Enter first number = 78
Enter second number = 98
The smallest of two numbers is = 78 

=== Code Execution Successful ===

*/
